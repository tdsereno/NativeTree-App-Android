<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Form.ServicosForm">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <AutoCompleteTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idtiposervico"
            android:textColor="#413F24"
            android:textColorHighlight="#413F24"
            android:textColorHint="#413F24"
            android:textColorLink="#413F24"
            android:textSize="16dp"
            android:hint="Tipo de serviço"
            android:layout_below="@+id/id"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:text="Salvar"
            android:id="@+id/button9"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#9EC934"
            android:textColor="#ffffff"
            android:textColorHighlight="#ffffff"
            android:textColorHint="#ffffff"
            android:textColorLink="#ffffff"
            android:textSize="16dp"
            android:allowUndo="false"
            android:clickable="false"
            android:longClickable="false" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/id"
            android:hint="Id"
            android:textSize="16dp"
            android:textColorHint="#413F24"
            android:textColorLink="#413F24"
            android:textColorHighlight="#413F24"
            android:textColor="#413F24"
            android:layout_below="@+id/textView8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView5"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_marginLeft="76dp"
            android:src="@drawable/logo_cor2"
            android:layout_alignParentRight="false"
            android:adjustViewBounds="true"
            android:clickable="false"
            android:layout_alignParentEnd="false"
            android:layout_alignParentBottom="false"
            android:layout_alignParentTop="false"
            android:layout_marginRight="76dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="SERVIÇO"
            android:id="@+id/textView8"
            android:layout_below="@+id/imageView5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:textColor="#413F24"
            android:typeface="normal"
            android:layout_marginBottom="20dp" />

        <AutoCompleteTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idsolicitacao"
            android:textColor="#413F24"
            android:textColorHighlight="#413F24"
            android:textColorHint="#413F24"
            android:textColorLink="#413F24"
            android:textSize="16dp"
            android:hint="Solicitação"
            android:layout_below="@+id/idtiposervico"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <AutoCompleteTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/usuario_idusuario"
            android:textColor="#413F24"
            android:textColorHighlight="#413F24"
            android:textColorHint="#413F24"
            android:textColorLink="#413F24"
            android:textSize="16dp"
            android:hint="Executor"
            android:layout_below="@+id/idsolicitacao"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</RelativeLayout>
