<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Form.ArvoresForm">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/form_arvores">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_marginLeft="76dp"
            android:src="@drawable/logo_cor2"
            android:layout_alignParentRight="false"
            android:adjustViewBounds="true"
            android:clickable="false"
            android:layout_alignParentEnd="false"
            android:layout_alignParentBottom="false"
            android:layout_alignParentTop="false"
            android:layout_marginRight="76dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="ÃRVORES"
            android:id="@+id/textView4"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:textColor="#413F24"
            android:typeface="normal"
            android:layout_marginBottom="20dp" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/id"
            android:hint="Id"
            android:textSize="16dp"
            android:textColorHint="#413F24"
            android:textColorLink="#413F24"
            android:textColorHighlight="#413F24"
            android:textColor="#413F24"
            android:text="0"
            android:layout_below="@+id/imageView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/textView15"
            android:layout_alignEnd="@+id/textView15" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/idade"
            android:textSize="16dp"
            android:textColorHint="#413F24"
            android:textColorLink="#413F24"
            android:textColorHighlight="#413F24"
            android:textColor="#413F24"
            android:layout_below="@+id/id"
            android:layout_alignRight="@+id/imageView2"
            android:layout_alignEnd="@+id/imageView2"
            android:inputType="number"
            android:layout_alignLeft="@+id/imageView2"
            android:layout_alignStart="@+id/imageView2" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/latitude"
            android:textSize="16dp"
            android:textColorHint="#413F24"
            android:textColorLink="#413F24"
            android:textColorHighlight="#413F24"
            android:textColor="#413F24"
            android:layout_below="@+id/idade"
            android:layout_alignRight="@+id/idade"
            android:layout_alignEnd="@+id/idade"
            android:layout_alignLeft="@+id/imageView2"
            android:layout_alignStart="@+id/imageView2" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/logetude"
            android:textSize="16dp"
            android:textColorHint="#413F24"
            android:textColorLink="#413F24"
            android:textColorHighlight="#413F24"
            android:textColor="#413F24"
            android:layout_below="@+id/latitude"
            android:layout_alignLeft="@+id/latitude"
            android:layout_alignStart="@+id/latitude"
            android:layout_alignRight="@+id/imageView2"
            android:layout_alignEnd="@+id/imageView2" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/geocode"
            android:textSize="16dp"
            android:textColorHint="#413F24"
            android:textColorLink="#413F24"
            android:textColorHighlight="#413F24"
            android:textColor="#413F24"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/logetude"
            android:layout_alignStart="@+id/logetude" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/status"
            android:layout_alignTop="@+id/textView5"
            android:layout_toRightOf="@+id/textView5"
            android:layout_toEndOf="@+id/textView5"
            android:layout_above="@+id/especie_idespecie"
            android:weightSum="1">

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ativo?"
            android:id="@+id/textView5"
            android:layout_gravity="center_horizontal"
            android:textSize="16dp"
            android:textColor="#413F24"
            android:layout_below="@+id/geocode"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <AutoCompleteTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/especie_idespecie"
            android:textColor="#413F24"
            android:textColorHighlight="#413F24"
            android:textColorHint="#413F24"
            android:textColorLink="#413F24"
            android:textSize="16dp"
            android:layout_below="@+id/textView5"
            android:layout_toRightOf="@+id/textView11"
            android:layout_marginTop="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <AutoCompleteTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/proprietaro"
            android:textColor="#413F24"
            android:textColorHighlight="#413F24"
            android:textColorHint="#413F24"
            android:textColorLink="#413F24"
            android:textSize="16dp"
            android:layout_below="@+id/especie_idespecie"
            android:layout_toRightOf="@+id/textView11"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:editable="true" />

        <Button
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:text="Salvar"
            android:id="@+id/btn_salvar"
            android:background="#9EC934"
            android:textColor="#ffffff"
            android:textColorHighlight="#ffffff"
            android:textColorHint="#ffffff"
            android:textColorLink="#ffffff"
            android:textSize="16dp"
            android:allowUndo="false"
            android:clickable="false"
            android:longClickable="false"
            android:layout_below="@+id/textView11"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:text="GPS"
            android:id="@+id/bt_gps"
            android:background="#9EC934"
            android:textColor="#ffffff"
            android:textColorHighlight="#ffffff"
            android:textColorHint="#ffffff"
            android:textColorLink="#ffffff"
            android:textSize="16dp"
            android:allowUndo="false"
            android:clickable="false"
            android:longClickable="false"
            android:layout_below="@+id/idade"
            android:layout_toEndOf="@+id/latitude"
            android:layout_above="@+id/logetude" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Especie:"
            android:id="@+id/textView10"
            android:layout_gravity="center_horizontal"
            android:textSize="16dp"
            android:textColor="#413F24"
            android:layout_alignBottom="@+id/especie_idespecie"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Proprietario:"
            android:id="@+id/textView11"
            android:layout_gravity="center_horizontal"
            android:textSize="16dp"
            android:textColor="#413F24"
            android:layout_alignBottom="@+id/proprietaro"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Longitude:"
            android:id="@+id/textView13"
            android:layout_gravity="center_horizontal"
            android:textSize="16dp"
            android:textColor="#413F24"
            android:layout_alignBaseline="@+id/logetude"
            android:layout_alignBottom="@+id/logetude"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latitude:"
            android:id="@+id/textView14"
            android:layout_gravity="center_horizontal"
            android:textSize="16dp"
            android:textColor="#413F24"
            android:layout_alignBaseline="@+id/latitude"
            android:layout_alignBottom="@+id/latitude"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Idade:"
            android:id="@+id/textView15"
            android:layout_gravity="center_horizontal"
            android:textSize="16dp"
            android:textColor="#413F24"
            android:layout_below="@+id/textView4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ativo"
            android:id="@+id/cb_ativo"
            android:layout_below="@+id/geocode"
            android:layout_alignLeft="@+id/especie_idespecie"
            android:layout_alignStart="@+id/especie_idespecie"
            android:checked="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GeoCode:"
            android:id="@+id/textView12"
            android:layout_gravity="center_horizontal"
            android:textSize="16dp"
            android:textColor="#413F24"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:text="Ver no mapa"
            android:id="@+id/bt_ver_mapa"
            android:textColor="#ffffff"
            android:background="#9EC934"
            android:layout_alignTop="@+id/btn_salvar"
            android:layout_alignRight="@+id/status"
            android:layout_alignEnd="@+id/status"
            android:layout_toRightOf="@+id/textView4"
            android:layout_toEndOf="@+id/textView4"
            android:layout_alignBottom="@+id/btn_salvar" />

    </RelativeLayout>
</RelativeLayout>
